<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:component-scan base-package="com.joopy.samples">
        <context:include-filter type="annotation" expression="javax.ws.rs.ext.Provider" />
        <context:include-filter type="annotation" expression="javax.ws.rs.Path" />
    </context:component-scan>

    <import resource="classpath:springmvc-resteasy.xml" />

    <!-- We need to override the default Validator used by RestEasy. Similar 
        to this one in MVC -->
    <!-- <bean id="justToOverrideValue" class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter"> 
        <property name="webBindingInitializer"> <bean class="org.springframework.web.bind.support.ConfigurableWebBindingInitializer"> 
        <property name="validator" ref="validator" /> </bean> </property> </bean> -->


    <!-- JSR 303 validation -->
    <bean id="validator"
        class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"
        depends-on="resteasy.spring.bean.processor" />
</beans>